</div>

<div class="row spacing">
    <a class="col-xs-3" href="@clubURL">Visit: @Model.Name</a>
</div>

@using (Html.BeginForm())
{
    <div class="row spacing">
        @Html.LabelFor(m => m.Name, new { @class = "col-xs-3" })
        @Html.TextBoxFor(m => m.Name)
    </div>

    <div class="row spacing">
        @Html.LabelFor(m => m.Country, new { @class = "col-xs-3" })
        @Html.DropDownListFor(m => m.Country, listItems,Model.Country)
    </div>

    <div class="row spacing">
        @Html.LabelFor(m => m.Eliminated, new { @class = "col-xs-3" })
        @Html.CheckBoxFor(m => m.Eliminated)
    </div>

    <input type="submit" value="Save" class="btn btn-default" />
}

